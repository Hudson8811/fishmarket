extends ../layouts/default
include ../helpers/mixins

block variables
	- const title = "Catalog categories Page"

block content
	include ../../blocks/components/breadcrumbs/breadcrumbs.pug


	.scroll-page
		.section.section--first.assortment__section.assortment__section--no-animation.bg-white
			.container
				+breadcrumbs({
					classes: 'assortment__breadcrumbs',
					items: [
						{
							name: 'Главная',
							link: '#'
						},
						{
							name: 'Каталог',
							link: '#'
						}
					]
				})
				.assortment__section__bg
					img(src="img/assortment__section__bg.png" alt="")
				.layout--trio
					.layout--trio__col
						.assortment__title.title__82
							h1 Категории <br>каталога
						a(href="#").btn--box.assortment__btn
							.btn.btn--circle
								svg
									use(xlink:href=`img/sprites/sprite.svg#arrow_btn`)
							.btn--box__text Перейти в каталог
					.layout--trio__col
