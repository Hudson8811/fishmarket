-
    const defaultVacancyCardProps = {
        classes: '',
        title: 'Менеджер по продажам',
        desc: '',
        city: 'Москва',
        salary: 'от 100 000 руб.',
    }

mixin vacancy-card(props = defaultVacancyCardProps)
    -
        const checkProps = {
            classes: props.classes ? props.classes : defaultVacancyCardProps.classes,
            title: props.title ? props.title : defaultVacancyCardProps.title,
            desc: props.desc ? props.desc : defaultVacancyCardProps.desc,
            city: props.city ? props.city : defaultVacancyCardProps.city,
            salary: props.salary ? props.salary : defaultVacancyCardProps.salary,
        }

    .vacancy-card(class= checkProps.classes)
        a.vacancy-card__link(href="#")
        .vacancy-card__header
            .vacancy-card__title= checkProps.title
            +new-btn({classes: 'vacancy-card__btn'})
        .vacancy-card__city
            svg
                use(xlink:href=`img/sprites/sprite.svg#header_position`)
            span= checkProps.city
        - if(checkProps.desc)
            .vacancy-card__desc.text-block!= checkProps.desc

        .vacancy-card__salary= checkProps.salary


