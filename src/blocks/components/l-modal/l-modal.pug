mixin l-modal(modalId="myModal", classes= '')
    .l-modal(class=classes data-id=modalId)
        .l-modal__overlay(data-js="lModalOverlay")
        .l-modal__content
            .l-modal__close(data-js="lModalClose")
                svg
                    use(xlink:href=`img/sprites/sprite.svg#header_close`)
            block