mixin vacancy-search(classes='')
    include ../input-radio/input-radio.pug
    include ../input-range/input-range.pug

    .vacancy-search(class= classes data-js="vacancySearch")
        label.vacancy-search__label
            input.vacancy-search__input(type="text" placeholder="Поиск")
        .vacancy-search__tags
            .vacancy-search__tag.filter-tag(data-js="vacancySearchTag")
                .filter-tag__text Москва
                .filter-tag__delete 
                    svg
                        use(xlink:href=`img/sprites/sprite.svg#city__top__close`)
            .vacancy-search__tag.filter-tag(data-js="vacancySearchTag")
                .filter-tag__text От 30 000 &#8381;
                .filter-tag__delete 
                    svg
                        use(xlink:href=`img/sprites/sprite.svg#city__top__close`)
        .vacancy-search__filter.search-filter
            +new-btn({
                classes: 'search-filter__open',
                tag: 'button',
                vMode: 'small',
                text: 'Фильтр',
                icon: 'true',
                iconName: 'select_arrow',
                cMode: 'black',
            })(data-js='searchFilterOpen')
            .search-filter__params
                .search-filter__fields
                    .search-filter__param.search-filter__param--city
                        .search-filter__name Город
                        +input-radio()
                        +input-radio({
                            value: 'Калининград',
                            text: 'Калининград',
                        })
                    .search-filter__param.search-filter__param--salary
                        +input-range()

                +new-btn({
                    classes: 'search-filter__apply',
                    tag: 'button',
                    vMode: 'small',
                    text: 'Применить',
                    icon: 'true',
                    cMode: 'black',
                })(data-js='searchFilterApply')
