section.l-map
    .l-map__cities(data-js='cities')
        +new-btn({
            classes: 'l-map__city active',
            tag: 'button',
            vMode: 'small',
            text: 'Москва',
            icon: 'false',
            cMode: 'white',
        })(data-city="moscow")
        +new-btn({
            classes: 'l-map__city',
            tag: 'button',
            vMode: 'small',
            text: 'Калининград',
            icon: 'false',
            cMode: 'white',
        })(data-city="kaliningrad")
    .l-map__addresses.active(data-js="lMapAddresses" data-city="moscow")
        .l-map__address.map-address(data-id='moscowStock1' data-js='lMapAddress')
            .map-address__header
                .map-address__title Склад
                .map-address__icon 
                    svg
                        use(xlink:href=`img/sprites/sprite.svg#header_position`)
            .map-address__item
                .map-address__subtitle адрес:
                .map-address__text Дмитровское шоссе, 137
            .map-address__item
                .map-address__subtitle контакты:
                .map-address__text 8 800 000-00-00
                .map-address__text info@fish.ru
